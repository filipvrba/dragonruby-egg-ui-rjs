export default class ElmModules < HTMLElement
  LINK_ADD = "/module/add"

  def initialize
    super

    self.innerHTML = get_title("<elm-spinner></elm-spinner>")
    database.query("select * from modules") do |modules|
      self.innerHTML = init_html(modules)
    end
  end

  def init_html(modules)
    l_trs = lambda do
      trs = ""
      modules.forEach do |_module|
        tr = """
          <tr>
            <th scope='row'>    
              <a href='#{_module.github_url}'>
                <p class='fa fa-github my-0'></p>
                <span class='mx-2'>
                  #{_module.name}
                </span>
              </a>
            </th>
            <td>#{_module.description}</td>
          </tr>
        """
        trs += tr
      end
      return trs
    end

    template = get_title("""
      <a href='#{LINK_ADD}'>
        <p class='mb-0 fa fa-plus'></p>
        Add
      </a>
    """)
    if modules.length > 0
      template = """
      #{get_title()}
      <table class='table'>
        <thead>
          <tr style='width: 31%; text-align: left;'>
            <th scope='col'>
              <a href='#{LINK_ADD}'>
                <p class='mb-0 fa fa-plus'></p>
                Add
              </a>
            </th>
            <th scope='col'>Description</th>
          </tr>
        </thead>
        <tbody>
          #{l_trs.call()}
        </tbody>
      </table>
      """
    end

    return template
  end

  def get_title(ext = '')
      return """
      <div class='text-center py-3'>
        <h2>Modules</h2>
        #{ext}
      </div>
      """
  end
end